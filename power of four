class Solution {
    public boolean isPowerOfFour(int n) {
        //int[] ans = new int[n];
        //int max = Integer.MIN_VALUE;
        for(int i=0 ;i<=15;i++){
            int ans = (int)Math.pow(4,i);
            if(ans == n){
                return true;
            }
            else if(ans > n){
                return false;
            }
        }
        return false;
    }
}
